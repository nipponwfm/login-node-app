<body>
    <div style="position: relative;">
        <form action="/register/process" method="GET">
            <fieldset>
                <legend>{{title}}</legend>
                <div id="container" style="height: 380px;">
                    <div>
                        <label for="user">User:</label><br>
                        <input id="user" type="text" placeholder="user" name="user"><br>
                        <label for="pwd">Password:</label><br>
                        <input id="pwd" type="password" placeholder="password" name="pwd"><br>
                        <label for="email">Email:</label><br>
                        <input id="email" type="email" placeholder="email" name="email"><br>
                        <input type="submit" value="register" style="margin-top: 10px; padding: 0px">
                    </div>
                </div>
            </fieldset>
        </form>
        <a id="btn-nav" href='/login'>Login</a>
    </div>
</body>